{
  "compilerOptions": {
    "esModuleInterop"               : true,
    "experimentalDecorators"        : true,
    "inlineSourceMap"               : false,
    "inlineSources"                 : true,
    "lib"                           : ["esnext", "dom", "dom.iterable"],
    "module"                        : "esnext",
    "moduleResolution"              : "node",
    "outDir"                        : ".building",
    "pretty"                        : true,
    "skipLibCheck"                  : true,
    "sourceMap"                     : true,
    "strict"                        : true,
    "suppressImplicitAnyIndexErrors": true,
    "target"                        : "esnext"
  },
  "include"        : [
    "src/test.ts",
    "declarations/**/*.d.ts"
  ]
}
